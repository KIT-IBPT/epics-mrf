# Typically, we only write changed elements. However, sometimes we might want to
# write all elements when something got out of sync.
record(fanout, "@PV_PREFIX@Event:MapRAM@MAP_RAM_NUM@:WriteAll") {
  field(DESC, "Write all elements to the device.")
  field(LNK1, "@PV_PREFIX@Event:MapRAM@MAP_RAM_NUM@:InternalFunctions:WriteAll")
  field(LNK2, "@PV_PREFIX@Event:MapRAM@MAP_RAM_NUM@:TrigPulseGens:WriteAll")
  field(LNK3, "@PV_PREFIX@Event:MapRAM@MAP_RAM_NUM@:SetPulseGens:WriteAll")
  field(LNK4, "@PV_PREFIX@Event:MapRAM@MAP_RAM_NUM@:ResetPulseGens:WriteAll")
}

